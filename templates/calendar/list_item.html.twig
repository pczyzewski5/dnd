{% if item is null %}
    <style>
        .column {
            display: flex;
            justify-content: center;
        }
        .column > figure {
            box-shadow: 0 0 10px #4a4a4a;
        }
        .column .image {
            max-width: 400px;
        }
    </style>
    <figure class="image">
        <img src="{{ image }}">
    </figure>
{% else %}
    <style>
        @font-face {
            font-family: "Nodesto Caps Condensed";
            src: url("/fonts/Nodesto Caps Condensed.otf") format("opentype");
            font-weight: normal;
        }
        .list-item {
            width: 400px;
            height: 560px;
            background-size: contain;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 10px #4a4a4a;
        }
        .list-item > div {
            position: absolute;
            height: 260px;
            width: 100%;
            background-color: rgba(74, 74, 74, 0.8);
            top: 27%;
            box-shadow: 0 0 10px #4a4a4a;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
        }
        .list-item .content {
            margin: 0;
        }
        .list-item .content p {
            font-family: "Nodesto Caps Condensed";
        }
        .list-item .button {
            border-radius: 0;
            background-color: transparent;
            border-top: 1px solid #f5f5f5;
            border-bottom: 1px solid #f5f5f5;
            color: #f5f5f5;
        }
        .list-item .button:hover, .list-item .button:focus {
            background-color: rgba(74, 74, 74, 0.6);
            border-top: 1px solid #f5f5f5;
            border-bottom: 1px solid #f5f5f5;
            transition: 0.2s;
        }
        .decoration {
            width: 100%;
            height: 20px;
            background-image: url("{{ asset('images/d20_white.png') }}");
            background-size: contain;
            margin-bottom: 0.5em;
        }
    </style>
    <div class="list-item" style="background-image: url({{ image }});">
        <div>
            <div class="content">
                <p class="has-text-centered is-size-3 has-text-light">{{ item['title'] }}</p>
            </div>
            <div class="decoration"></div>
            <button class="button is-dark is-fullwidth">{{ item['hasAnswered'] ? 'zmień odpowiedź' : 'odpowiedz' }}</button>
        </div>
    </div>
{% endif %}