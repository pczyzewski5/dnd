<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Calendar\Infrastructure\CalendarParticipant\CalendarParticipant" table="calendar_participants">
        <id name="calendarId" type="string" column="calendar_id"/>
        <id name="participantId" type="string" column="participant_id"/>
        <field name="willAttend" type="string" column="will_attend" nullable="true"/>
        <field name="maybeAttend" type="string" column="maybe_attend" nullable="true"/>
        <field name="createdAt" type="datetime" column="created_at"/>
    </entity>

</doctrine-mapping>